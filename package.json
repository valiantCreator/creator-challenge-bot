{
  "name": "creator-challenge-bot",
  "version": "0.1.0",
  "description": "Discord bot for content creator challenges (MVP)",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/index.js",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "client": "npm run dev --prefix client",
    "deploy": "node src/deploy-commands.js",
    "deploy:commands": "node src/deploy-commands.js",
    "reset:db": "node scripts/reset-db.js",
    "test": "vitest"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cookie-session": "^2.1.1",
    "cors": "^2.8.5",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "react-router-dom": "^7.10.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.7",
    "vitest": "^3.2.4"
  }
}
